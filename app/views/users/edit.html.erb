<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit User</title>
  </head>
  <body>
    <% if flash[:notice].kind_of?(Array) %>
      <% flash[:notice].each do |message|%>
        <h4><%=message%></h4>
      <% end %>
    <% end %>
    <% if flash[:notice].kind_of?(String) %>
      <h4><%=flash[:notice]%></h4>
    <% end %>
    <form class="edituser" action="/users/edit" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
      <label for="name">Name: <input type="text" name="name" value="<%= @user.name %>"></label><br>
      <label for="email">Email: <input type="text" name="email" value="<%= @user.email %>"></label><br>
      <input type="submit" name="update" value="Update">
    </form>
    <form action='/users' method='post'>
      <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
      <input type='hidden' name='_method' value='delete'>
      <input type='submit' value='Delete Account'>
    </form>
  </body>
</html>
